{
  "extends": [
    "react-app"
  ],
  "rules": {
    "semi": ["error", "always"],
    "keyword-spacing": ["error", { "before": true }],
    "space-before-blocks": "error",
    "no-trailing-spaces": "error",
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": ["error", { "max": 8, "maxEOF": 1 }],
    "eol-last": ["error", "always"],
    "indent": ["error", 2, { "SwitchCase": 1 }]
  },
  "overrides": [
    {
      "files": ["**/*.ts?(x)"],
      "rules": {}
    }
  ]
}
